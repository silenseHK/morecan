.top-title{
  margin-top: 140rpx;
  font-size: 48rpx;
  height: 278rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  font-weight: 500;
}
.line-bold{
  width: 268rpx;
  height: 10rpx;
  background: #333;
}
.line-normal{
  width: 268rpx;
  height: 4rpx;
  background: #333;
}

.tag-titile{
  position: relative;
  z-index: 9;

}
.tag-titile .tag-words-background{
  content: '';
  position: absolute;
  bottom: 12rpx;
  height: 32rpx;
  width: 80%;
  left: 0;
  background: #e5c39f;
  z-index: -1;
}
.dot{
  height: 10rpx;
  width: 10rpx;
  background: #333;
  border-radius: 20rpx;
  margin: 10rpx;
}
span{
  display: block;
  position: relative;
  z-index: 1;
  margin: 0 5rpx;
  font-weight: 500;
}
span::after{
  content: '';
  position: absolute;
  bottom: 10rpx;
  height: 32rpx;
  width: 100%;
  left: 0;
  background: #e5c39f;
  z-index: -1;
}
.list-item{
  line-height: 50rpx;
  font-size: 28rpx;
}
.main-title{
  font-size: 52rpx;
  margin-top: 38rpx;
}
.bottom-buy{
  margin-top: 60rpx;
}

.bottom-buy-btn{
  width: 560rpx;
  display: block;
  height: 82rpx;
  line-height: 82rpx;
  font-size: 36rpx;
  background-color: #E6C3A0;
  color: #1E1E1E;
  float: right;
  text-align: center;
  border-radius: 82rpx;
  box-shadow: 0 8rpx 15rpx 0px rgba(0, 0, 0, 0.08);
}
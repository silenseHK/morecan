/* diy组件 */
@import "../../components/diy/index.wxss";

page {
  background: #fff !important;
}
.navigationBar{
  position: relative;
  z-index: 9;
  width: 100%;
  background-image: linear-gradient(95deg,#FF7739 0%,#FC8B56 74%);
}
.top-fixed-container{
  position:absolute;
  /* bottom:18rpx; */
  bottom: 0rpx;
  padding: 0 30rpx;
}
.navigationBar .top-fixed-container .logo{
  font-size: 320rpx;
  color: #fff;
  line-height: .25;
}

.top-container{
  width: 100%;
  height: 472rpx;
  position: relative;
  overflow: hidden;
  /* z-index: -1; */
}
.top-title{
  position: absolute;
  z-index: 2;
  color: #fff;
  width: 92%;
  margin: 0 4%;
  top: 10rpx;
}
.share-icon{
  font-size: 46rpx;
}
.index-top-bg{
  position: absolute;
  width: 130%;
  height: 160px;
  border-radius: 0 0 50% 50%;
  box-shadow: 0 10rpx 10rpx 0px rgba(0, 0, 0, 0.01);
  margin-left: -15%;
  background-color: #E3C1A1;
  /* background-image: linear-gradient(90deg,#E3C1A1 0%,#D9A074 74%); */
  background-color: #FF7739;
  background-image: linear-gradient(95deg,#FF7739 0%,#FC8B56 74%);
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  overflow: hidden;
}
.index-bg-icon{
  width: 800rpx;
  height: 800rpx;
  position: absolute;
  background-size: contain;
  right: -200rpx;
  bottom: -450rpx;

}

/* 商品海报 弹出层 */

.pop-poster {
  position: relative;
  /* background: #fff; */
  /* padding: 42rpx; */
  border-radius: 10rpx;
  top: 40rpx;
}

/* 关闭按钮 */

.pop-poster .pop-close {
  position: absolute;
  width: 56rpx;
  height: 56rpx;
  background: #fff;
  border-radius: 50%;
  box-shadow: 0 0 25rpx rgba(0, 0, 0, 0.15);
  right: -28rpx;
  top: -28rpx;
}

.pop-poster .pop-close text {
  display: block;
}

.pop-poster .poster__image {
  /* padding: 0 40rpx; */
}

.pop-poster .poster__image image {
  box-shadow: 0 0 25rpx rgba(0, 0, 0, 0.15);
  /* width: 460rpx; */
  width: 540rpx;
  /* height: 696.746rpx; */
  border-radius: 15rpx;
  background: #fff;
}

.pop-poster .profile-btn button {
  margin-bottom: 0;
}

  padding: 42rpx;
  border-radius: 10rpx;
}

.pop-poster .profile-btn button {
  margin-bottom: 0;
}

.login-container{
  width: 480rpx;
}
.wechatapp {
  margin-top: 20rpx;
  text-align: center;
}

.wechatapp .avatat-header {
  width: 160rpx;
  height: 160rpx;
  border: 2px solid #fff;
  margin: 0rpx auto 0;
  border-radius: 50%;
  overflow: hidden;
  box-shadow: 1px 0px 5px rgba(50, 50, 50, 0.3);
}

.auth-subtitle {
  color: #888;
  margin: 20rpx 0;
  font-size: 28rpx;
}

.login-btn {
  width: 50%;
  padding-left: 10rpx;
}

.login-btn button {
  height: 76rpx;
  line-height: 76rpx;
  background: #E6C3A0;
  color: #1E1E1E;
  font-size: 30rpx;
  border-radius: 999rpx;
  text-align: center;
}

.no-login-btn {
  width: 50%;
  padding-right: 10rpx;
}

.no-login-btn button {
  height: 76rpx;
  line-height: 76rpx;
  background: #F3F3F3;
  color: #686868;
  font-size: 30rpx;
  border-radius: 999rpx;
  text-align: center;
}

}

.dish-item {
  width: 94%;
  margin: 0 3%;
  margin-bottom: 3%;
  position: relative;
  background: #fff;
  border-radius: 10rpx;
  overflow: hidden;
  box-sizing: border-box;
}

.dish-item-radio {
  padding: 20rpx 10rpx;
  padding-right: 0;
}

.dish-item-wrp {
  flex-direction: row;
}

.dish-item-pic {
  width: 240rpx;
  height: 100%;
  margin-left: 26rpx;
  position: relative;
}

.dish-item-pic image {
  position: absolute;
  width: 100%;
  height: 100%;
  background: #fff;
}

.dish-item-info {
  padding: 20rpx 0 16rpx;
}

.dish-item-info .goods-name {
  /* height: 80rpx; */
}
.plan-desc{
  padding-top: 8rpx;
  padding-bottom: 6rpx;
  border-bottom: 1rpx solid #cacaca;
}
.plan-desc-text{
  height: 70rpx;
  font-weight: 600;
  color: #5d5d5d;
  font-size: 20rpx;
}
.dish-item-sales {
  color: #ccc;
  font-size: 20rpx;
  line-height: 50rpx;
}

.dish-item-money {
  color: #2a2a2a;
  font-size: 30rpx;
  font-weight: 600;
}
.dish-item-money text{
  font-size: 22rpx;
}

.flow-dete {
  position: absolute;
  bottom: 25rpx;

/* 商品组 */

.diy-goods .goods-list {
  margin: 4rpx;
  box-sizing: border-box;
}

.diy-goods .goods-list .goods-item {
  box-sizing: border-box;
  padding: 6rpx;
}

.diy-goods .goods-list.display__slide {
  white-space: nowrap;
  font-size: 0;
}

.diy-goods .goods-list.display__slide .goods-item {
  display: inline-block;
}

.diy-goods .goods-list.display__list .goods-item {
  float: left;
}

.diy-goods .goods-list.column__2 .goods-item {
  width: 50%;
  padding: 1%;
  /* border-radius: 15rpx; */
}

.diy-goods .goods-list.column__3 .goods-item {
  width: 33.33333%;
}

.diy-goods .goods-list .goods-item .goods-image {
  position: relative;
  width: 100%;
  /* height: 0; */
  /* padding-bottom: 100%; */
  /* overflow: hidden; */
  background: #fff;
}

.diy-goods .goods-list .goods-item .goods-image:after {
  content: '';
  display: block;
  /* margin-top: 100%; */
  /* margin 百分比相对父元素宽度计算 */
}

.diy-goods .goods-list .goods-item .goods-image .image {
  /* position: absolute; */
  width: 100%;
  /* height: 100%; */
  /* top: 0; */
  /* left: 0; */
  -o-object-fit: cover;
  object-fit: cover;
}

.diy-goods .goods-list .goods-item .detail {
  position: absolute;
  /* background: #fff; */
  bottom: 10rpx;
  width: 100%;
  z-index: 9;
}

.diy-goods .goods-list .goods-item .detail .goods-name {
  /* height: 76rpx; */
  line-height: 1.3;
  white-space: normal;
  color: #fff;
  padding: 0 20rpx;
}

.diy-goods .goods-list .goods-item .detail .detail-price .goods-price {
  margin-right: 8rpx;
}

.diy-goods .goods-list .goods-item .detail .detail-price .line-price {
  text-decoration: line-through;
}

/* 单列商品 */

.diy-goods .goods-list.column__1 .goods-item {
  width: 100%;
  /* height: 280rpx; */
  /* margin-bottom: 12rpx; */
  padding: 20rpx;
  box-sizing: border-box;
  background: #fff;
  border-radius: 15rpx;
}

.diy-goods .goods-list.column__1 .goods-item {
  line-height: 1.6;
}

.diy-goods .goods-list.column__1 .goods-item:last-child {
  margin-bottom: 0;
}

.diy-goods .goods-list.column__1 .goods-item_left {
  display: flex;
  width: 100%;
  background: #fff;
  align-items: center;
  border-radius: 15rpx;
}

.diy-goods .goods-list.column__1 .goods-item_left .image {
  display: block;
  width: 100%;
  border-radius: 15rpx;
  /* height: 240rpx; */
}

.diy-goods .goods-list.column__1 .goods-item_right {
  position: absolute;
  width: 100%;
  bottom: 18rpx;
  z-index: 9;
}

.diy-goods .goods-list.column__1 .goods-item_right .goods-item_title {
  /* height: 72rpx; */
  margin-top: 20rpx;
  font-size: 34rpx;
  font-weight: bold;
  color: #fff;
  padding: 0 30rpx;
}

.diy-goods .goods-list.column__1 .goods-item_right .goods-item_title {
  line-height: 1.3;
}

.diy-goods .goods-list.column__1 .goods-item_desc {
  margin-top: 8rpx;
  padding: 0 30rpx;
}

.diy-goods .goods-list.column__1 .desc-selling_point {
  width: 400rpx;
  /* height: 40rpx; */
  font-size: 24rpx;
  color: #fff;
  /* padding-bottom: 10rpx; */
}

.diy-goods .goods-list.column__1 .desc-goods_sales {
  color: #999;
  font-size: 24rpx;
}

.diy-goods .goods-list.column__1 .desc_footer {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
}
.diy-goods .goods-list.column__1 .buy_now{
  color: #fff;
  height: 42rpx;
  line-height: 42rpx;
  border: 1rpx solid #fff;
  border-radius: 30rpx;
  padding: 0 10px;
  margin-right: 30rpx;
  font-size: 26rpx;
}

.diy-goods .goods-list.column__1 .desc_footer .price_x {
  margin-right: 16rpx;
  color: #fff;
  font-size: 36rpx;
}
.diy-goods .goods-list.column__1 .desc_footer .price_x .money-symbol{
  font-size: 24rpx;
}

.diy-goods .goods-list.column__1 .desc_footer .price_y {
  text-decoration: line-through;
}


/* 双列产品样式 */
.diy-goods .column__2{
  margin: 0 2%;
  padding: 4rpx
}
.diy-goods .goods-list.column__2 .goods-item image{
  border-radius: 15rpx;
}
.diy-goods .goods-list.column__2 .goods-item .detail-price{
  color: #fff;
  margin: 10rpx 0 10rpx;
  padding: 0 20rpx;
}
.diy-goods .goods-list.column__2 .goods-item .desc{
  color: #fff;
  padding: 0 20rpx;
}
.diy-goods .goods-list.column__2 .detail-price{
  display: flex;
  /* align-items: center; */
  justify-content: space-between;
}
.diy-goods .goods-list.column__2 .buy_now{
  color: #fff;
  height: 40rpx;
  line-height: 40rpx;
  border: 1rpx solid #fff;
  border-radius: 30rpx;
  padding: 0 8px;
  font-size: 24rpx;
}
.shadow{
  height:220rpx;
  width:100%;
  position: absolute;
  box-shadow: 0px -120px 18px -30px rgba(0, 0, 0, 0.25) inset;
  border-radius: 0 0 15rpx 15rpx;
  bottom: 0;
  z-index: 1;
}
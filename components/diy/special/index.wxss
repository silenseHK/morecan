/* 头条快报 */

.diy-special{
  margin: 0 3%;
  background: #ffefe9;
  border-radius: 32rpx;
}
.diy-special .special-left {
  padding: 10rpx 20rpx;
  padding-right: 16rpx;
}

.diy-special .special-left .image {
  display: block;
  width: 140rpx;
}

.diy-special .special-content {
  /* width: 500rpx; */
  overflow: hidden;
  padding: 4rpx 0;
  border-radius: 32rpx;
}

.diy-special .special-content .content-item {
  padding: 4rpx 0;
  font-size: 26rpx;
  color: #141414;
  /* height: auto; */
  /* padding-left: 16rpx; */
}
.diy-special .special-content .content-item text{
  text-indent: 5rpx;
}
.diy-special .new-icon{
  width:50rpx;
  height:32rpx
}

.diy-special .special-content.display_1 {
  height: 44rpx;
}

.diy-special .special-content.display_2 {
  height: 88rpx;
}


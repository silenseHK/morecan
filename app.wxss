/* 顶部导航公共样式 */
.header {
  width: 100%;
  height: 100rpx;
  /* border-bottom: 20rpx solid #212121; */
  display: flex;
  background: #ffffff;
  line-height: 100rpx;
  position: fixed;
  top: 0;
  z-index: 100;
  justify-content: space-around;
  /* padding-bottom: 20rpx; */
}

.header view {
  /* flex: 1; */
  text-align: center;
  margin: 0 15rpx;
  color: #7E7E7E;
}

.header view text {
  display: block;
}

.header view.active view{
  color: #ff6239;
  position: relative;

}

.header view.active view {
  display: block;
  position: relative;
  display: flex;
  justify-content: center;
}
.header .active view::after {
  content: '';
  position: absolute;
  width: 100%;
  height: 6rpx;
  border-radius: 6rpx;
  background: #ff6239;
  bottom: 6px;
}
/* 个人中心卡片公共样式 */
